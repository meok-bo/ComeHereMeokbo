<html>
<head>
    <% include ../header.ejs %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/meetting_show.css">
    <script src="//code.jquery.com/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript">

        var map;
        function initMap() {
            var location= <%-JSON.stringify(location)%>;
            _lat=Number(String(location[0].latlng).split(",")[0].split("(")[1].trim());
            _lng=Number(String(location[0].latlng).split(",")[1].split(")")[0].trim());
            map = new google.maps.Map(document.getElementById('map'), {
                center: {lat: _lat, lng: _lng},
                zoom: 15
            });

            var maker1=new google.maps.Marker({
                position:{lat: _lat, lng: _lng},
                map:map,
                animation: google.maps.Animation.DROP
            });

        }

    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8bk04KxVxc0fnprYkxr-NqfVGDY3SxgI&callback=initMap">
    </script>

</head>
<body>
<% include ../body.ejs %>
<div class="meeting_header">
    <div class="inner">
        <section class="meeting_show_header">
            <h1><%=location[0].title%></h1>
            <div class="author-area">
                <img class="user-tumb" src="/imgs/user/<%=location[0].user[0].img%>">
                <strong class="user-ID"><%=location[0].user[0].name%></strong>
            </div>
            <div class="time-area">
                <label><i class="fa fa-calendar-check-o" aria-hidden="true"></i>모임날짜</label>
                <span class="time"><%=location[0].date%></span>
                <label><i class="fa fa-clock-o" aria-hidden="true"></i>모임시간</label>
                <span class="time"><%=location[0].time%></span>
            </div>
            <div class=spot-area">
                <label><i class="fa fa-map-marker" aria-hidden="true"></i>모임장소</label>
                <span class="amount"><%=location[0].address%></span>
            </div>
            <div class="img-map-area">
                <img src="/imgs/user/<%=location[0].img%>">
                <div id="map"></div>
            </div>
        </section>
    </div>
</div>
<div id="temp"></div>
<div class="meeting_content">
    <div class="inner">
        <seciont class="meeting_show_content">
            <div class="text">
                <h2>모임 내용</h2>
                <textarea class="text_content" disabled ><%=location[0].text%></textarea>
            </div>
        </seciont>
    </div>
</div>
<% include ../footer.ejs %>
</body>
</html>
